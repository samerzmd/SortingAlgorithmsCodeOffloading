<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="apps.buildable.sortingalgorithms.MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/quickSortBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quick Sort"
                android:tag="QuickSort"/>
            <!--return to sorting algorithm enum for tag-->

            <Button
                android:id="@+id/insertionSortBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Insertion sort"
                android:tag="InsertionSort"/>
            <!--return to sorting algorithm enum for tag-->

        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>
